<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    cacheTokens="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false">

    <testsuites>
        <testsuite name="UnitTests">
            <directory>./test/api/unit</directory>
        </testsuite>
        <testsuite name="FunctionalTests">
            <directory>./test/api/functional</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>tests</directory>
        </blacklist>
    </filter>
    <!--logging>
        <log type="coverage-html" target="report/cli/code_coverage" charset="UTF-8" yui="true" highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging-->
</phpunit>
