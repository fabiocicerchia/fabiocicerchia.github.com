<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <id>urn:uuid:http://www.fabiocicerchia.it/api.php/language</id>
    <title type="text">Fabio Cicerchia API - Language</title>
    <subtitle type="text"></subtitle>

    <updated>{{ "now"|date("Y-m-d") }}T{{ "now"|date("H:i:s") }}Z</updated>
    <author>
        <name>Fabio Cicerchia</name>
        <uri>http://www.fabiocicerchia.it</uri>
        <email>info@fabiocicerchia.it</email>
    </author>
    <rights>Copyright (c) {{ "now"|date("Y") }}, Fabio Cicerchia</rights>

    {% for entry in entries %}
    <entry>
        <id>urn:uuid:{{ entry._id }}</id>
        <title type="text">{{ entry.language }}</title>
        <summary type="text">{{ entry.language }}</summary>
        <updated>{{ "now"|date("Y-m-d") }}T{{ "now"|date("H:i:s") }}Z</updated>

        <link rel="index" href="http://www.fabiocicerchia.it/api.php/language/{{ entry._id }}" />
        <content type="xhtml">
            {% for knowledge, level in entry.knowledge %}
            <dl class="adjacent" itemtype="http://schema.org/ItemList" itemscope="itemscope">
                <dt itemprop="name">{{ knowledge }}</dt>
                <dd class="last" itemprop="itemListElement">{{ level }}</dd>
            </dl>
            {% endfor %}
        </content>
    </entry>
    {% endfor %}
</feed>
